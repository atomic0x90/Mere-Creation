<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inapp">

    <Button
        android:id="@+id/getCoin30000"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"

        android:background="@drawable/button_back"
        android:fontFamily="@font/custom_font_1"
        android:soundEffectsEnabled="false"
        android:text="30000\n코인 구매"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/bluewhitedrak"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/getCoin10000"
        app:layout_constraintTop_toBottomOf="@+id/getCoin3000" />

    <Button
        android:id="@+id/getCoin1000"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_back"
        android:fontFamily="@font/custom_font_1"
        android:soundEffectsEnabled="false"
        android:text="1000\n코인 구매"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/bluewhite"

        app:layout_constraintBottom_toTopOf="@+id/getCoin10000"
        app:layout_constraintEnd_toStartOf="@+id/getCoin3000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InappNowCoinText" />

    <Button
        android:id="@+id/getCoin3000"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_back"
        android:fontFamily="@font/custom_font_1"
        android:soundEffectsEnabled="false"
        android:text="3000\n코인 구매"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/bluewhite"

        app:layout_constraintBottom_toTopOf="@+id/getCoin30000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/getCoin1000"
        app:layout_constraintTop_toBottomOf="@+id/InappNowCoinText" />

    <Button
        android:id="@+id/getCoin10000"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_back"
        android:fontFamily="@font/custom_font_1"
        android:soundEffectsEnabled="false"
        android:text="10000\n코인 구매"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/bluewhitedrak"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/getCoin30000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getCoin1000" />

    <ImageView
        android:id="@+id/InappNowCoinImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"

        android:background="@drawable/back_white"
        android:src="@drawable/coin"
        app:layout_constraintEnd_toStartOf="@+id/InappNowCoinText"
        app:layout_constraintTop_toBottomOf="@+id/InappNowText" />

    <TextView
        android:id="@+id/InappNowCoinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/custom_font_2"
        android:text="1000"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InappNowText" />

    <TextView
        android:id="@+id/InappNowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/custom_font_2"
        android:text="현재 보유 코인"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/bluewhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>