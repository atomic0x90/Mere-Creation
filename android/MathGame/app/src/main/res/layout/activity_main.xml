<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:background="@color/background"
    >


    <Button
        android:id="@+id/exitButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"

        android:layout_marginBottom="10dp"

        android:background="@drawable/button_back"
        android:text="@string/exit"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/developerButton"
        app:layout_constraintTop_toBottomOf="@+id/multitableButton"

        android:soundEffectsEnabled="false"/>

    <Button
        android:id="@+id/developerButton"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"

        android:layout_marginBottom="10dp"
        android:background="@drawable/button_back"
        android:text="개발자\n정보"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/statsButton"
        app:layout_constraintTop_toBottomOf="@+id/multitableButton"
        android:soundEffectsEnabled="false"/>

    <Button
        android:id="@+id/infiaddButton"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_back"
        android:text="1분 무한 더하기 도전"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divideButton"
        android:soundEffectsEnabled="false"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="    수학 게임\n두뇌 트레이닝"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:textColor="@color/text"
        />

    <Button
        android:id="@+id/addButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_back"
        android:text="더하기 도전"

        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:soundEffectsEnabled="false"/>

    <Button
        android:id="@+id/subButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_back"
        android:text="빼기 도전"

        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:soundEffectsEnabled="false"/>

    <Button
        android:id="@+id/multiButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:text="곱하기 도전"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addButton"

        android:background="@drawable/button_back"
        android:textColor="@color/text"
        android:soundEffectsEnabled="false"
        />

    <Button
        android:id="@+id/divideButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="나누기 도전"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subButton"

        android:background="@drawable/button_back"
        android:textColor="@color/text"
        android:soundEffectsEnabled="false"
        />

    <Button
        android:id="@+id/maxminButton"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/button_back"
        android:text="최대 최소 게임하기"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infisubButton"

        android:soundEffectsEnabled="false"
        />

    <Button
        android:id="@+id/infisubButton"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/button_back"
        android:text="1분 무한 빼기 도전"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infiaddButton"

        android:soundEffectsEnabled="false"
        />

    <Button
        android:id="@+id/multitableButton"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/button_back"
        android:text="곱셈표 보기(구구단)"

        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maxminButton"

        android:soundEffectsEnabled="false"
        />

    <Button
        android:id="@+id/statsButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_back"

        android:text="사용자 통계"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multitableButton"

        android:soundEffectsEnabled="false"
        />

    <Button
        android:id="@+id/setButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_back"
        android:text="설정"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:soundEffectsEnabled="false"
        />

    <Button
        android:id="@+id/evaluationButton"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginStart="7dp"

        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/button_back"
        android:text="평가하기"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/text"
        app:layout_constraintStart_toEndOf="@+id/multitableButton"
        app:layout_constraintTop_toBottomOf="@+id/maxminButton"

        android:soundEffectsEnabled="false"
        />

    <Button
        android:id="@+id/coinNowButton"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style"

        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/text"
        app:layout_constraintStart_toEndOf="@+id/coinImgButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/coinImgButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coin" />

    <ImageButton
        android:id="@+id/coinPlusButton"
        android:layout_width="20dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style"
        app:layout_constraintStart_toEndOf="@+id/coinNowButton"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@android:drawable/ic_input_add" />

</androidx.constraintlayout.widget.ConstraintLayout>