<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserStatistics"

    android:background="@color/background"

    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="통계"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="409dp"
        android:layout_height="689dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        app:columnCount="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:orientation="horizontal">

        <Button
            android:id="@+id/Plus10Answer"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="Button"
            android:textColor="@color/text"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/empty1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:textColor="@color/text"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/AlltimeButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="전체\n평균 시간"
            android:textColor="@color/text"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/answer10Button"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="최근 10회\n정답률"
            android:textColor="@color/text"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/time10Button"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="최근 10회\n평균 시간"
            android:textColor="@color/text"

            app:layout_column="4"
            app:layout_row="0" />

        <Button
            android:id="@+id/AllanswerButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="전체\n정답률"
            android:textColor="@color/text"

            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/Plus"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="더하기"
            android:textColor="@color/text"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/PlusAnswer"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="Button"
            android:textColor="@color/text"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/Plus10Time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="Button"
            android:textColor="@color/text"
            app:layout_column="4"
            app:layout_row="1" />

        <Button
            android:id="@+id/PlusTime"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="Button"
            android:textColor="@color/text"
            app:layout_column="2"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>