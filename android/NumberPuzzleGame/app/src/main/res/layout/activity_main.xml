<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:background="@color/bgc"
    >

    <Button
        android:id="@+id/GameStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:background="@drawable/costom_menu_button2"
        android:fontFamily="@font/imcresoojin"
        android:text="게임하기"

        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/textc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:soundEffectsEnabled="false"/>

    <Button
        android:id="@+id/developerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/costom_menu_button4"
        android:fontFamily="@font/imcresoojin"

        android:text="개발자 정보"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/textc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ReviewButton"
        android:soundEffectsEnabled="false"/>

    <Button
        android:id="@+id/ReviewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:background="@drawable/costom_menu_button3"
        android:fontFamily="@font/imcresoojin"
        android:text="리뷰하기"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/textc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GameStartButton"
        android:soundEffectsEnabled="false"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/imcresoojin"
        android:gravity="center"
        android:text="숫자 순서 퍼즐 게임\n순서 맞추기"

        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/textc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

</androidx.constraintlayout.widget.ConstraintLayout>