<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameLine2"

    android:background="@color/bgc"

    >

    <Button
        android:id="@+id/Line2TopButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/costom_button1_2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Line2RetryButton"

        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:fontFamily="@font/imcresoojin"
        android:stateListAnimator="@null"
        android:textColor="@color/textc"
        android:text="1234"
        />

    <Button
        android:id="@+id/Line2MiddleButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/costom_button1_3"
        android:fontFamily="@font/imcresoojin"

        android:stateListAnimator="@null"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/Line2BottomButton"
        app:layout_constraintEnd_toStartOf="@+id/Line2MiddleButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Line2TopButton"
        tools:text="1234"

        android:textColor="@color/textc"
        />

    <Button
        android:id="@+id/Line2MiddleButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/costom_button1_3"
        android:fontFamily="@font/imcresoojin"

        android:stateListAnimator="@null"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/Line2BottomButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Line2MiddleButton1"
        app:layout_constraintTop_toBottomOf="@+id/Line2TopButton"
        tools:text="1234"
        android:textColor="@color/textc"/>

    <Button
        android:id="@+id/Line2BottomButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:background="@drawable/costom_button1_4"
        android:fontFamily="@font/imcresoojin"
        android:inputType="textEmailAddress|textNoSuggestions"
        android:stateListAnimator="@null"

        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:textColor="@color/textcw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="1234" />

    <Button
        android:id="@+id/Line2RetryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/costom_button1_1"
        android:fontFamily="@font/imcresoojin"
        android:text="다시하기"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/Line2TopButton"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/textc"/>

    <TextView
        android:id="@+id/Line2Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/imcresoojin"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/textc"

        app:layout_constraintEnd_toStartOf="@+id/Line2RetryButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/Line2adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:adSize = "SMART_BANNER"
        app:adUnitId = "@string/TEST_BANNER_AD"
        />

</androidx.constraintlayout.widget.ConstraintLayout>