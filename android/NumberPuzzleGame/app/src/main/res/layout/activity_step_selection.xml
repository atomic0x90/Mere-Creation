<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StepSelection"

    android:background="@color/bgc"
    >

    <TextView
        android:id="@+id/StepSelectionTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="단계선택"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/textc"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StepSelectionTitleText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/TutorialButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/costom_menu_button1"

                android:stateListAnimator="@null"
                android:text="튜토리얼"
                android:textColor="@color/textc" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bg2"

                />

            <Button
                android:id="@+id/Step1Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/costom_menu_button1"
                android:stateListAnimator="@null"
                android:text="1"
                android:textColor="@color/textc" />

            <LinearLayout
                android:id="@+id/Step1Ver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:id="@+id/Step1Hor1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/Step1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1-1"
                        android:background="@drawable/costom_menu_button1"
                        android:textColor="@color/textc"
                        android:stateListAnimator="@null"/>

                    <Button
                        android:id="@+id/Step1_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1-2"
                        android:background="@drawable/costom_menu_button1"
                        android:textColor="@color/textc"
                        android:stateListAnimator="@null"/>

                    <Button
                        android:id="@+id/Step1_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1-3"
                        android:background="@drawable/costom_menu_button1"
                        android:textColor="@color/textc"
                        android:stateListAnimator="@null"/>

                    <Button
                        android:id="@+id/Step1_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1-4"
                        android:background="@drawable/costom_menu_button1"
                        android:textColor="@color/textc"
                        android:stateListAnimator="@null"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Step1Hor2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/Step1_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1-5"
                        android:background="@drawable/costom_menu_button1"
                        android:textColor="@color/textc"
                        android:stateListAnimator="@null"/>

                    <Button
                        android:id="@+id/Step1_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1-6"
                        android:background="@drawable/costom_menu_button1"
                        android:textColor="@color/textc"
                        android:stateListAnimator="@null"/>

                    <Button
                        android:id="@+id/Step1_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1-7"
                        android:background="@drawable/costom_menu_button1"
                        android:textColor="@color/textc"
                        android:stateListAnimator="@null"/>

                    <Button
                        android:id="@+id/Step1_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1-8"
                        android:background="@drawable/costom_menu_button1"
                        android:textColor="@color/textc"
                        android:stateListAnimator="@null"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bg2" />

            <Button
                android:id="@+id/Step2Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@drawable/costom_menu_button2"
                android:stateListAnimator="@null"
                android:text="2"
                android:textColor="@color/textcw" />

            <LinearLayout
                android:id="@+id/Step2Ver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/Step2Hor1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/Step2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2-1"
                        android:background="@drawable/costom_menu_button2"
                        android:textColor="@color/textcw"
                        android:stateListAnimator="@null"/>

                    <Button
                        android:id="@+id/Step2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2-2"
                        android:background="@drawable/costom_menu_button2"
                        android:textColor="@color/textcw"
                        android:stateListAnimator="@null"/>

                    <Button
                        android:id="@+id/Step2_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2-3"
                        android:background="@drawable/costom_menu_button2"
                        android:textColor="@color/textcw"
                        android:stateListAnimator="@null"/>

                    <Button
                        android:id="@+id/Step2_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2-4"
                        android:background="@drawable/costom_menu_button2"
                        android:textColor="@color/textcw"
                        android:stateListAnimator="@null"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Step2Hor2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/Step2_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2-5"
                        android:background="@drawable/costom_menu_button2"
                        android:textColor="@color/textcw"
                        android:stateListAnimator="@null"/>

                    <Button
                        android:id="@+id/Step2_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2-6"
                        android:background="@drawable/costom_menu_button2"
                        android:textColor="@color/textcw"
                        android:stateListAnimator="@null"/>

                    <Button
                        android:id="@+id/Step2_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2-7"
                        android:background="@drawable/costom_menu_button2"
                        android:textColor="@color/textcw"
                        android:stateListAnimator="@null"/>

                    <Button
                        android:id="@+id/Step2_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2-8"
                        android:background="@drawable/costom_menu_button2"
                        android:textColor="@color/textcw"
                        android:stateListAnimator="@null"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bg3" />

            <Button
                android:id="@+id/Step3Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@drawable/costom_menu_button2"
                android:stateListAnimator="@null"
                android:text="3"
                android:textColor="@color/textcw" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>