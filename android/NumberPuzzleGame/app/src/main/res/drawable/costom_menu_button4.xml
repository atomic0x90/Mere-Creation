<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <padding
                android:bottom="4dp"
                android:left="8dp"
                android:right="8dp"
                android:top="4dp" />
            <gradient
                android:angle="270"
                android:endColor="@color/bg4"
                android:startColor="@color/bg4p" />

            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <padding
                android:bottom="4dp"
                android:left="8dp"
                android:right="8dp"
                android:top="4dp" />
            <solid android:color="@color/bg4" />
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
        </shape>
    </item>

</selector>